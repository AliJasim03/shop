<% content_for :header do %>
  <section class="hero is-warning">
    <div class="hero-body">
      <div class="container">
        <h1 class="title">
          Line Item Details
        </h1>
      </div>
    </div>
  </section>
<% end %>

<section class="section">
  <div class="columns">
    <div class="column is-8 is-offset-2">
      <div class="box">
        <div class="content">
          <p>
            <strong>Product:</strong>
            <%= @line_item.product.title if @line_item.product %>
          </p>

          <p>
            <strong>Quantity:</strong>
            <%= @line_item.quantity %>
          </p>

          <p>
            <strong>Cart:</strong>
            <%= @line_item.cart_id %>
          </p>

          <p>
            <strong>Total Price:</strong>
            <%= number_to_currency(@line_item.total_price) %>
          </p>
        </div>

        <div class="field is-grouped">
          <%= link_to 'Edit', edit_line_item_path(@line_item), class: 'button is-link' %>
          <%= link_to 'Back', line_items_path, class: 'button is-light' %>
        </div>
      </div>
    </div>
  </div>
</section>