<% content_for :header do %>
  <section class="hero is-warning">
    <div class="hero-body">
      <div class="container">
        <h1 class="title">
          All Line Items
        </h1>
      </div>
    </div>
  </section>
<% end %>

<div class="section">
  <table class="table is-fullwidth">
    <thead>
    <tr>
      <th>Product</th>
      <th>Quantity</th>
      <th>Cart</th>
      <th colspan="3"></th>
    </tr>
    </thead>

    <tbody>
    <% @line_items.each do |line_item| %>
      <tr>
        <td><%= line_item.product.title if line_item.product %></td>
        <td><%= line_item.quantity %></td>
        <td><%= line_item.cart_id %></td>
        <td>
          <%= link_to 'Show', line_item, class: 'button is-small' %>
          <%= link_to 'Edit', edit_line_item_path(line_item), class: 'button is-small' %>
          <%= link_to 'Destroy', line_item, method: :delete, data: { confirm: 'Are you sure?' }, class: 'button is-small is-danger' %>
        </td>
      </tr>
    <% end %>
    </tbody>
  </table>
</div>